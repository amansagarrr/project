    body{font-family:Arial;margin:0;background:#f4f6f9}
    .nav{background:#2c3e50;padding:10px;color:#fff;display:flex;gap:10px}
    .nav button{padding:8px 12px;border:none;cursor:pointer}
    .container{padding:20px}
    .card{background:#fff;padding:20px;border-radius:10px;margin-bottom:20px}
    input,select{padding:8px;margin:5px;width:100%}
    .hidden{display:none}
  </style>
